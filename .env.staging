# Staging Environment Variables
# Copy this file to .env.staging and fill in your actual values

# Application Configuration
NODE_ENV=staging
PORT=3000
API_BASE_URL=https://staging-api.micro-learning.com

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
AIRTABLE_USERS_TABLE=Users
AIRTABLE_LESSONS_TABLE=Lessons

# Google APIs Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://staging.micro-learning.com/auth/google/callback
GOOGLE_SHEETS_ID=your_google_sheets_id_here
GOOGLE_CALENDAR_ID=primary

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Twilio Configuration (WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_WEBHOOK_URL=https://staging.micro-learning.com/webhooks/twilio

# Email Configuration (Gmail)
GMAIL_USER=your_gmail_address_here
GMAIL_APP_PASSWORD=your_gmail_app_password_here
GMAIL_FROM_NAME=Micro-Learning Scheduler (Staging)

# n8n Configuration
N8N_WEBHOOK_URL=https://staging-n8n.micro-learning.com/webhook
N8N_API_KEY=your_n8n_api_key_here
N8N_BASE_URL=https://staging-n8n.micro-learning.com

# Database Configuration
DATABASE_URL=postgresql://user:password@staging-db:5432/microlearning
REDIS_URL=redis://staging-redis:6379/0

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/staging.log
LOG_MAX_SIZE=50m
LOG_MAX_FILES=10

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# External Services
WEBHOOK_SECRET=your_webhook_secret_here
API_RATE_LIMIT=500
API_RATE_WINDOW=900000